{
  "expo": {
    "name": "Oxford MindMap",
    "slug": "oxford-mindmap",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/brain/1024.png",
    "splash": {
      "image": "./assets/brain_transparent_with_text.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "android": {
      "package": "com.dreamingspires.oxford_mindmap",
      "permissions": ["ACCESS_FINE_LOCATION"]
    },
    "ios": {
      "bundleIdentifier": "com.dreamingspires.oxford-mindmap",
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses location to unlock content based on geographical proximity."
      }
    },
  }
}
